{% extends "layout.njk" %}

{% block head %}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<link rel="stylesheet" href="styles2.css">

<title>Portfolio-Desafio</title>

<!--Aqui o head foi definido logo o padrão não aparecerá-->

{% endblock%}

{% block conteudo%}

<div id="ParteDoBlog">
    <h1>Posts Favoritos da Rocketseat</h1>
</div>


<section class="cards">
    {% for item in items %}
    <div id="{{item.id}}" class="card">
        <div class="card_conteudo_imagens">
            <img src="https://blog.rocketseat.com.br/content/images/2020/10/dark-mode-com-css-mudando-a-aparencia-do-blog-de-maneira-simples-e-rapida.jpg"
                alt="Blog Rocketseat">
        </div>

        <div class="card_titulo_do_card">
            <p>{{item.title}}</p>

        </div>

        <div class="card_autor">
            <p>{{item.author}}</p>
            <p class="card_tempoLeitura">{{item.minutes}}</p>
        </div>
    </div>
    
    {% endfor %}
</section>


<div class="modal_sobreposicao">
    <div class="modal">
        <a class="close2_modal">
            <i class="material-icons">close</i>
        </a>

        <div class="conteudo_modal">
            <iframe scr="" frameborder="0"></iframe>
        </div>
    </div>

</div>

<script src="script2.js"></script>
        
{% endblock %}